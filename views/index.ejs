<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Countries information</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link href="css/style.css" rel="stylesheet">
</head>
<body>
    <h1 class="text-center">Countries</h1>
    <form class="text-center" action="/" method="POST">
        
        Select:
        <select name="country">
            <option value="Estonia">Estonia</option>
            <option value="Latvia">Latvia</option>
            <option value="Lithuania">Lithuania</option>
        </select>
        <button type="submit">Submit</button>
       
    </form>
     <% if (countryEJS) { %>
<div class="d-flex justify-content-center">
    
    <table class="table table-striped table-dark w-50">
    <tbody>
    <tr>
      <th scope="row"><h5>Country</h5></th>
      <td>
     
        <h5><%= countryEJS.name %></h5>
     
      </td>
      </tr>
      <tr>
      <th scope="row"><h5>Top Level Domain</h5></th>
      <td><h5><%= countryEJS.topLevelDomain %></h5></td>
    </tr>
    <tr>
      <th scope="row"><h5>Calling Code</h5></th>
      <td><h5><%= countryEJS.callingCodes %></h5></td>
    </tr>
    <tr>
      <th scope="row"><h5>Capital</h5></th>
      <td><h5><%= countryEJS.capital %></h5></td>
    </tr>
    <tr>
      <th scope="row"><h5>Region</h5></th>
      <td><h5><%= countryEJS.region %></h5></td>
    </tr>
    <tr>
      <th scope="row"><h5>Subregion</h5></th>
      <td><h5><%= countryEJS.subregion %></h5></td>
    </tr>
    <tr>
      <th scope="row"><h5>Population</h5></th>
      <td><h5><%= countryEJS.population %></h5></td>
    </tr>
     <tr>
      <th scope="row"><h5>Timezone</h5></th>
      <td><h5><%= countryEJS.timezones %> </h5></td>
    </tr>
    <tr>
      <th scope="row"><h5>Language</h5></th>
      <td><h5><%= countryEJS.languages[0].name %></h5></td>
    </tr>
    <tr>
      <th scope="row"><h5>Currency</h5></th>
      <td><h5><%= countryEJS.currencies[0].code %>, <%= countryEJS.currencies[0].name %>, <%= countryEJS.currencies[0].symbol %></h5></td>
    </tr>
    
    <tr>
      <th scope="row"><h5>Flag</h5></th>
      <td><img class="w-50" src="<%= countryEJS.flag %> "></td>
    </tr>
    </tbody>
    </table>
</div>
 <% } %>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>  
</body>
</html>